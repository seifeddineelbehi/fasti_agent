import 'package:flutter/material.dart';
import 'package:flutter_screenutil/flutter_screenutil.dart';
import 'package:fasti_dashboard/features/admin/agents/data/model/agent_model.dart';

class AgentPermissionsCardWidget extends StatelessWidget {
  final AgentModel agent;

  const AgentPermissionsCardWidget({
    super.key,
    required this.agent,
  });

  @override
  Widget build(BuildContext context) {
    return Card(
      child: Padding(
        padding: EdgeInsets.all(20.w),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Row(
              children: [
                Icon(Icons.security, color: Colors.green[600]),
                SizedBox(width: 8.w),
                Text(
                  'Permissions',
                  style: TextStyle(
                    fontSize: 18.sp,
                    fontWeight: FontWeight.bold,
                  ),
                ),
              ],
            ),
            SizedBox(height: 20.h),

            Text(
              'This agent has ${agent.permissions.length} permissions:',
              style: TextStyle(
                fontSize: 14.sp,
                color: Colors.grey[600],
                fontWeight: FontWeight.w500,
              ),
            ),
            SizedBox(height: 16.h),

            // Replace ListView.builder with Column inside SingleChildScrollView
            Expanded(
              child: SingleChildScrollView(
                child: Column(
                  children: agent.permissions.map((permission) {
                    return Padding(
                      padding: EdgeInsets.symmetric(vertical: 4.h),
                      child: Row(
                        children: [
                          Icon(
                            Icons.check_circle,
                            color: Colors.green[600],
                            size: 16.r,
                          ),
                          SizedBox(width: 8.w),
                          Expanded(
                            child: Text(
                              _formatPermissionName(permission),
                              style: TextStyle(
                                fontSize: 14.sp,
                                fontWeight: FontWeight.w500,
                              ),
                            ),
                          ),
                        ],
                      ),
                    );
                  }).toList(),
                ),
              ),
            ),
          ],
        ),
      ),
    );
  }

  String _formatPermissionName(String permission) {
    return permission.split('_').map((word) =>
    word[0].toUpperCase() + word.substring(1)).join(' ');
  }
}